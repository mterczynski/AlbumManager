<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.zdjecie">

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/whiteTransparent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/changeCamera"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="right|bottom"
            android:layout_weight="1"
            app:srcCompat="@drawable/rotate_camera_icon" />

        <ImageView
            android:id="@+id/takePicture"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="left|bottom"
            android:layout_weight="1"
            app:srcCompat="@drawable/take_picture_icon" />

        <ImageView
            android:id="@+id/savePicture"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/accept_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="top"
        android:background="@color/whiteTransparent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/colorsButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/colors_icon" />

        <ImageView
            android:id="@+id/flashButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/flash_icon" />

        <ImageView
            android:id="@+id/sunButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/sun_icon" />

        <ImageView
            android:id="@+id/resizeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/resize_icon" />
    </LinearLayout>
</RelativeLayout>
